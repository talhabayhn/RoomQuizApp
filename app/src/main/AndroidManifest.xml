<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roomquizapp">

    <application
        android:name=".RoomQuizApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoomQuizApp">
        <activity android:name=".ui.add.AddQuestionActivity"></activity>
        <activity android:name=".ui.result.ResultActivity" />
        <activity android:name=".ui.quiz.QuizActivity" />
        <activity
            android:name=".ui.start.StartActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>